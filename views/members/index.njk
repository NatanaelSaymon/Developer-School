{% extends "layout.njk" %}

{% block content %}
  <div class="card table-container">
  <a href="/members/create">Novo</a>
    <table width="100%">
      <thead>
        <tr>
          <th>Membro</th>
          <th>Serviços</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
         {% for member in members %}
          <tr>
            <td>
            <span style="background-image: url({{ member.avatar_url }})"></span>
              {{ member.name }}
            </td>
            <td>{{ member.services }}</td>
            <td><a href="/members/{{ member.id }}">Ver</a></td>
          </tr>
        {% endfor %} 
      </tbody>
    </table>
  </div>
{% endblock content %}
